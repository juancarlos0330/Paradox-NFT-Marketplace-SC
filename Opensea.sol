            nftAddress: _nftAddress,
            price: _startpriceinwei,
            expiresAt: endAt[_nftAddress][_nftId]
        });

        emit Start(_nftAddress, _nftId, endAt[_nftAddress][_nftId], highestBid[_nftAddress][_nftId]);
    }

    function bid(address _nftAddress, uint256 _nftId) external payable {
        require(started[_nftAddress][_nftId], "not started");
        require(block.timestamp < endAt[_nftAddress][_nftId], "ended");
        require(msg.value > highestBid[_nftAddress][_nftId], "value < highest");
        
        Auction memory auction = AuctionByAssetId[_nftAddress][_nftId];
        address higher = highestBidder[_nftAddress][_nftId];

        if (higher != address(0)) {
            bids[auction.id][higher] += highestBid[_nftAddress][_nftId];
        }

        highestBidder[_nftAddress][_nftId] = msg.sender;
        highestBid[_nftAddress][_nftId] = msg.value;

        emit Bids(msg.sender, msg.value);
    }

    function withdraw(address _nftAddress, uint256 _nftId) external {
        Auction memory auction = AuctionByAssetId[_nftAddress][_nftId];

        uint bal = bids[auction.id][msg.sender];
        bids[auction.id][msg.sender] = 0;
        payable(msg.sender).transfer(bal);

        emit Withdraw(msg.sender, bal);
    }

    function end(address _nftAddress, uint256 _nftId) external {
        Auction memory auction = AuctionByAssetId[_nftAddress][_nftId];

        require(started[_nftAddress][_nftId], "not started");
        require(block.timestamp >= endAt[_nftAddress][_nftId], "not ended");
        require(!ended[_nftAddress][_nftId], "ended");

        ended[_nftAddress][_nftId] = true;
        if (highestBidder[_nftAddress][_nftId] != address(0)) {
            IERC721(_nftAddress).safeTransferFrom(address(this), highestBidder[_nftAddress][_nftId], _nftId);
            payable(auction.seller).transfer(highestBid[_nftAddress][_nftId]);
        } else {
            IERC721(_nftAddress).safeTransferFrom(address(this), auction.seller, _nftId);
        }

        emit End(highestBidder[_nftAddress][_nftId], highestBid[_nftAddress][_nftId]);
    }


    // Auction with Paradox Token
    function createAuctionWithToken(address _nftAddress, uint256 _nftId, uint256 _expiresAt, uint256 _startamount) external {
        require(!started[_nftAddress][_nftId], "started");
        require(IERC721(_nftAddress).ownerOf(_nftId) == msg.sender);
        IERC721(_nftAddress).transferFrom(msg.sender, address(this), _nftId);
        started[_nftAddress][_nftId] = true;
        endAt[_nftAddress][_nftId] = block.timestamp + _expiresAt;
        highestBid[_nftAddress][_nftId] = _startamount;
        
        // create the orderId
        bytes32 orderId = keccak256(
            abi.encodePacked(
                block.timestamp,
                msg.sender,
                _nftAddress,
                _nftId,
                _startamount
            )
        );

        // save order
        AuctionByAssetId[_nftAddress][_nftId] = Auction({
            id: orderId,
            seller: msg.sender,
            nftAddress: _nftAddress,
            price: _startamount,
            expiresAt: endAt[_nftAddress][_nftId]
        });

        emit Start(_nftAddress, _nftId, endAt[_nftAddress][_nftId], highestBid[_nftAddress][_nftId]);
    }

