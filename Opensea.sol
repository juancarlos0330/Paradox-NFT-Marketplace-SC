        require(price > 0, "Price must be at least 1 wei");
        offerCount++;
        offers[_nftAddress][offerCount] = _Offer(offerCount, _nftAddress, tokenId, msg.sender, price, false, false);
        IERC721(_nftAddress).transferFrom(msg.sender, address(this), tokenId);
        emit Offer(offerCount, _nftAddress, tokenId, msg.sender, price, false, false);
    }
    
    /* Creates the sale of a marketplace item */
    /* Transfers ownership of the item, as well as funds between parties */
    function BuyWithETH(address _nftAddress,uint256 _offerId) public payable nonReentrant {
        _Offer storage _offer = offers[_nftAddress][_offerId];
        require(_offer.offerId == _offerId, "The offer must exist");
        require(_offer.user != msg.sender, "The owner of the offer cannot fill it");
        require(!_offer.fulfilled, "An offer cannot be fulfilled twice");
        require(msg.value == _offer.price, "The ETH amount should match with the NFT Price");
        require(!_offer.cancelled, "A cancelled offer cannot be fulfilled");
        IERC721(_nftAddress).transferFrom(address(this), msg.sender, _offer.id);
        _offer.fulfilled = true;
        
         // Marketing fee 5%
        uint256 marketingfeefortreasury = msg.value * 5 / 100; // marketing fee 5 %
        payable(treasury).transfer(marketingfeefortreasury);

        // Pay buyer from seller
        payable(_offer.user).transfer(msg.value * 95 / 100);
        
        sellers[_nftAddress][count].userAddres = _offer.user;
        sellers[_nftAddress][count].balance = msg.value;
        count++;
        emit OfferFilled(_offerId, _offer.id, msg.sender);
    }

