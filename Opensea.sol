        uint256 price;
        // Time when this sale ends
        uint256 expiresAt;
    }

    event Start(address _nftAddress, uint256 _nftId, uint256 _expiresAt, uint256 _startpriceinwei);
    event Bids(address indexed sender, uint amount);
    event Withdraw(address indexed bidder, uint amount);
    event End(address winner, uint amount);

    // From ERC721 registry assetId to Auction (to avoid asset collision)
    mapping(address => mapping(uint256 => Auction)) public AuctionByAssetId;

    mapping(address => mapping(uint256 => bool)) public started;
    mapping(address => mapping(uint256 => bool)) public ended;
    
    mapping(address => mapping(uint256 => uint256)) public endAt;
    mapping(address => mapping(uint256 => uint256)) public highestBid;
    mapping(address => mapping(uint256 => address)) public highestBidder;
    mapping(bytes32 => mapping(address => uint256)) public bids;
    
