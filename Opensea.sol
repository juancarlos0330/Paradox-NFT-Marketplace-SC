        owner = payable(msg.sender);
        paradoxtoken_address = para;
    }

    mapping(address => mapping(uint256 => _Offer)) public offers;
    mapping(address => mapping(uint256 => Seller)) public sellers;

    struct _Offer {
        uint256 offerId;
        address _nftAddress;
        uint256 id;
        address user;
        uint256 price;
        bool fulfilled;
        bool cancelled;
    }

    struct Seller {
       address userAddres;
       uint256 balance;
    }

    event Offer(uint256 offerId, address _nftAddress, uint256 id, address user, uint256 price, bool fulfilled, bool cancelled);
    event OfferFilled(uint256 offerId, uint256 id, address newOwner);
    event OfferCancelled(uint256 offerId, uint256 id, address owner);

