        require(amount > 0, "Amount must be at least 1");
        offerCount++;
        offers[_nftAddress][offerCount] = _Offer(offerCount, _nftAddress, tokenId, msg.sender, amount, false, false);
        IERC721(_nftAddress).transferFrom(msg.sender, address(this), tokenId);
        emit Offer(offerCount, _nftAddress, tokenId, msg.sender, amount, false, false);
    }

 /* Creates the sale of a marketplace item */
